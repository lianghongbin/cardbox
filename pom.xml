    <profiles>
        <profile>
            <id>local</id>
            <properties>
                <jdbc.driver>com.mysql.jdbc.Driver</jdbc.driver>
                <jdbc.url>jdbc:mysql://127.0.0.1:3306/cardbox</jdbc.url>
                <jdbc.username>root</jdbc.username>
                <jdbc.password/>
            </properties>
        </profile>
        <profile>
            <id>dev</id>
            <properties/>
        </profile>

        <profile>
            <id>test</id>
            <properties>
                <hello>andy</hello>
            </properties>
        </profile>

        <profile>
            <id>product</id>
        </profile>

        <profile>
            <id>Windows</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <logger.root>c:\card\logs\</logger.root>
            </properties>
        </profile>
        <profile>
            <id>Linux</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>unix</family>
                    <name>linux</name>
                </os>
            </activation>
            <properties>
                <logger.root>/tmp/card/logs/</logger.root>
            </properties>
        </profile>
        <profile>
            <id>Mac</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <os>
                    <family>Mac</family>
                </os>
            </activation>
            <properties>
                <logger.root>~/card/logs/</logger.root>
            </properties>
        </profile>
